rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Validate image upload
    function isValidImage() {
      return request.resource.size < 10 * 1024 * 1024
             && request.resource.contentType.matches('image/(jpeg|png|gif|webp|svg\\+xml)');
    }

    // Gallery images - public read, authenticated write
    match /gallery/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && isValidImage();
    }

    // Section images - public read, authenticated write
    match /section-images/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && isValidImage();
    }

    // Slider images - public read, authenticated write
    match /sliders/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && isValidImage();
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
