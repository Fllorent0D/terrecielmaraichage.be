rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Gallery images - public read, authenticated write
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Section images (parallax, founder, etc.) - public read, authenticated write
    match /section-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Slider images - public read, authenticated write
    match /sliders/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Deny access to everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
